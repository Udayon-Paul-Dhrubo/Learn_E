<!-- Topbar Start -->
<div class="container-fluid" style="width:100%;">

    <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">

        <% if( logged_in == 'false') %>
            <a href="/home" class="navbar-brand">
                <img src="/img/logo1.png" alt="Learn_E" width="280" height="100" class="d-inline-block align-text-top" style="margin-left: 5px;">
            </a>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav py-0">
                    <a href="/home" class="nav-item nav-link <% if(path=='/home'){active}">Home</a>
                    <a href="/about" class="nav-item nav-link <% if(path=='/about'){active}">About</a>
                </div>
            </div>

            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

            <div class="column text-end float-right">
                <a href="/login" type="button" class="btn btn-outline-dark me-2">Login</a>
                <a type="/signup" class="btn btn-warning">Sign-up</a>
            </div>

            <% } else { %>


                <a href="<% if(isStudent=='true'){ student/user/<%= userInfo.id %>/ } else { teacher/user/<%= userInfo.id %>/ }" class="navbar-brand">
                    <img src="/img/logo1.png" alt="Learn_E" width="280" height="100" class="d-inline-block align-text-top" style="margin-left: 5px;">
                </a>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav py-0">
                        <a href="<% if(isStudent=='true'){ student/user/<%= userInfo.id %>/ } else { teacher/user/<%= userInfo.id %>/ } %>" class="nav-item nav-link <% if(path=='/home'){active}">Home</a>
                        <a href="<% if(isStudent=='true'){ student/user/<%= userInfo.id %>/about } else { teacher/user/<%= userInfo.id %>/about } %>" class="nav-item nav-link <% if(path=='/about'){active}">About</a>
                        <a href="<% if(isStudent=='true'){ student/user/<%= userInfo.id %>/courses } else { teacher/user/<%= userInfo.id %>/courses } %>" class="nav-item nav-link <% if(path=='/courses'){active}">Courses</a>
                        <a href="<% if(isStudent=='true'){ student/user/<%= userInfo.id %>/teachers } else { teacher/user/<%= userInfo.id %>/teachers } %>" class="nav-item nav-link <% if(path=='/teachers'){active}">Teachers</a>
                        <a href="<% if(isStudent=='true'){ student/user/<%= userInfo.id %>/my-courses } else { teacher/user/<%= userInfo.id %>/my-courses } %>" class="nav-item nav-link <% if(path=='/my-courses'){active}">My Courses</a>

                    </div>
                </div>

                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

                <div class="column text-end float-right header-profile" style="margin-right:2px;">
                    <a href="<% if(isStudent=='true'){ student/user/<%= userInfo.id %>/profile-view } else { teacher/user/<%= userInfo.id %>/profile-view } %>" class="btn btn-secondary" style="color:#ea6434;"><img src="/img/person.jpg" width="50" height="50" style="border-color: rgb(51, 100, 207);">
                        <%= userInfo.name %>
                    </a>
                </div>
                <div class="column text-end float-right header-profile">
                    <a href="/signout" class="btn btn-secondary" style="color:#ea3434; border-radius: 50px;"> <i class="fas fa-sign-out-alt"></i> </a>
                </div>

                <% } %>

    </nav>

</div>
<!--Topbar End -->