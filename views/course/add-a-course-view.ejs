<%- include('../includes/starting.ejs') %>

    <body>
        <%- include('../includes/topbar.ejs') %>
            <%- include('../includes/search-top.ejs') %>


                <section class="white section" style="top: 0%;">
                    <div class="container-fluid" style="top: 0%;">

                        <% if(create_button == 'false') { %>

                            <form method="post" action="/teacher/user/<%= userInfo.User_ID %>/add-course/pre">
                                <div class="container" style="align-items: center;">
                                    <label for="course_name" style="width: 100%;"><strong>TITLE</strong></label>
                                    <input type="text" name="course_name" id="course_name" placeholder="Course Name" style="width: 80%;" />
                                    <br>
                                    <button class="btn btn-primary" type="submit" style="margin-top: 3rem;">Create New</button>
                                </div>
                            </form>

                            <% } else { %>

                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-5 pull-left">
                                            <p style="display: inline;">Teachers : </p>
                                            <% for( teacher_in of teachers_in ) { %>
                                                <a href=" " title=" ">
                                                    <%=teacher_in.Name + ' , '%>
                                                </a>
                                                <% } %>
                                        </div>

                                        <div class="col-md-7 pull-right">

                                            <form action="/teacher/user/<%= userInfo.User_ID%>/add-course/<%=courseInfo.course_id%>/search-teacher" method="POST">
                                                <div class="sf-type">
                                                    <div class="sf-input">
                                                        <input type="text" name="search_bar_req" id="search_bar_req" placeholder="Search teacher by name" style="border: .5px solid;">
                                                    </div>
                                                    <% if(req_teachers.length > 0) { %>
                                                        <div class="form-control container-fluid" style="width: 100%; height: auto;">
                                                            <ul>
                                                                <% for( let req_teacher of req_teachers ) { %>
                                                                    <li class="row" style="height: 40px;">
                                                                        <section class="col-md-2  float-left">
                                                                            <img src="/img/<%= req_teacher.image %>" style="width: 50px; height: 50px; display: inline; border-radius: 50px;">
                                                                        </section>
                                                                        <a href="" class="link col-md-6" style=" font-size: 22px; margin-top:6px;">
                                                                            <%= req_teacher.Name %>
                                                                        </a>
                                                                        <a href="/teacher/user/<%= userInfo.User_ID%>/add-course/<%=courseInfo.course_id%>/add-teacher/<%=req_teacher.User_ID%> " class="btn btn-secondary col-md-2 pull-right" style="display: inline; border-radius: 80px;"><i class="fa fa-plus fa-sm "></i></a>
                                                                    </li>
                                                                    <hr>
                                                                    <% } %>
                                                            </ul>
                                                            <a class="link pull-right" href="/teacher/user/<%= userInfo.User_ID%>/add-course/<%=courseInfo.course_id%>"><i class="fa fa-close"></i></a>
                                                        </div>
                                                        <% } %>
                                                </div>

                                                <div class=" sf-submit ">
                                                    <input class="btn " type="submit " value="Search " style="border-radius:0; ">
                                                </div>

                                            </form>

                                        </div>
                                    </div>

                                </div>

                                <hr style="border: .5px solid;">

                                <!--sidebar starts -->
                                <div class="sidebar ">
                                    <ul>

                                        <!--dynamic overview -->
                                        <li>
                                            <div class="over ">
                                                <a href="# " class="link " onclick="myFunction() ">
                                            Overview <i class="fas fa-chevron-down "></i>
                                        </a>
                                            </div>



                                            <ul class="drp_down " id="drp_down ">

                                                <div style="margin-top: 1rem; ">
                                                    <a href=" " class="link ">
                                                Module
                                            </a>
                                                </div>
                                                <div style="margin-top: 1rem; ">
                                                    <a href=" " class="link ">
                                                        <i class="fa fa-plus "></i> Create New
                                                    </a>
                                                </div>

                                            </ul>


                                        </li>
                                        <!--dynamic overview ends -->

                                        <li> <a href=" " class="link "> Grades </a> </li>
                                        <li> <a href=" " class="link "> FAQ </a> </li>

                                        <li></li>
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                    </ul>
                                </div>
                                <!--sidebar ends -->


                                <!--create new view -->
                                <div class="week others pull-right " id="week1 ">
                                    <div class="info ">
                                        <h2>Week 2</h2>
                                        <h5>Week Lessons</h5>
                                    </div>
                                    <!-- week lesson-->
                                    <div class="course-table ">
                                        <table class="table ">
                                            <thead>
                                                <tr>
                                                    <th>Type</th>
                                                    <th>Lesson Title</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                            </tbody>

                                        </table>
                                    </div>
                                    <!-- week lesson ends -->

                                </div>





                                <!--create new view ends -->

                                <% } %>







                    </div>
                </section>


                <%- include('../includes/footer.ejs') %>
                    <script src="/js/app.js "></script>
    </body>

    </html>