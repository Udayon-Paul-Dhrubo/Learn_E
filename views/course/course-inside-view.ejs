<%- include('../includes/starting.ejs') %>

    <body>
        <%- include('../includes/topbar.ejs') %>
            <%- include('../includes/search-top.ejs') %>

                <!--sidebar starts -->
                <div class="sidebar">
                    <ul>

                        <!--dynamic overview -->
                        <li>
                            <div class="over">
                                <a href="#" class="link" onclick="myFunction()">
                                    Overview <i class="fas fa-chevron-down"></i>
                                </a>
                            </div>
                            <%index=0%>
                                <%for(let module of modules ){%>
                                    <%index=index+1%>
                                        <ul class="drp_down" id="drp_down">

                                            <div style="margin-top: 1rem;">
                                                <a href="/student/user/<%=userInfo.User_ID%>/course-inside-view/<%=course.course_id%>/<%=module.Module_ID%>"
                                                    class="link">
                                                    Module <%=index%>
                                                </a>
                                            </div>

                                        </ul>
                                        <%}%>

                        </li>
                        <!--dynamic overview ends -->

                        <li> <a href="" class="link"> Grades </a> </li>
                        <li> <a href="" class="link"> FAQ </a> </li>

                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <!--sidebar ends -->




                <% if(weekView=='true' ) { %>
                    <div class="week others pull-right" id="week1">
                        <div class="info">


                            <h2>Week 1</h2>
                            <h4>Week Lessons</h4>
                        </div>


                        <!-- week lesson-->
                        <div class="course-table ">

                            <table class="table ">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Lesson Title</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    <!-- for loop -->
                                    <%for(content of contents){%>
                                        <tr style="background-color:rgb(196, 228, 196);">
                                            <td><i class="fa fa-play-circle"></i></td>
                                            <td>
                                                <a
                                                    href="/student/user/<%=userInfo.User_ID%>/course-inside-view/<%=course.course_id%>/<%=thisModule.Module_ID%>/video/<%=content.VideoContent_ID%>">
                                                    <%=content.Description%>
                                                </a>
                                            </td>
                                            <td>
                                                <%=content.Duration%>
                                            </td>
                                            <td><i class="fa fa-check "></i></td>
                                        </tr>
                                        <%}%>
                                            <!-- for loop -->

                                </tbody>

                            </table>
                        </div>
                        <!-- week lesson ends -->

                    </div>
                    <% } %>

                        <% if( videoView=='true' ) {%>
                            <div class="videos others" id="videos">
                                <div class="video_container">
                                    <div class="video">


                                        <h2 style="color: #041562;">Video Topic</h2>

                                        <div class="info">
                                            <div class="discuss">
                                                <i class="fas fa-comments"></i> Discuss
                                            </div>
                                        </div>

                                        <video width="720" height="540" controls>
                                            <source src="./videos/<%=video_content.Video%>" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>


                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <% if( quizView=='true' ) { %>

                                    <div class="container quizs others" id="quizs">
                                        <div class="row quiz_container">
                                            <div id="course-content" class="col-md-12">
                                                <div class="course-description">

                                                    <small>Quiz Status: <span>Not Finished</span> </small>
                                                    <br>
                                                    <br>

                                                    <h5 class="course-title">Quiz - Question 1</h5>
                                                    <div class="quiz-wrapper">

                                                        <!--Q-->
                                                        <h3>How to start Photoshop with short keyboard with Mac</h3>
                                                        <!--Q-->

                                                        <div class="row" style="margin-bottom:2rem;">
                                                            <div class="col-md-12">

                                                                <div class="panel panel-primary">
                                                                    <form>
                                                                        <div class="panel-body">
                                                                            <!-- for right use rgb(162, 221, 162) -->
                                                                            <!-- for wrong use rgb(236, 156, 156) -->
                                                                            <div
                                                                                style="width:100%;  margin-bottom: 5px; background-color: rgb(162, 221, 162); border-radius:10px;">
                                                                                <div class="radio">
                                                                                    <label>
                                                                                        <input name="optionsRadios"
                                                                                            id="optionsRadios1"
                                                                                            value="option1"
                                                                                            type="radio">
                                                                                        Option 1
                                                                                    </label>
                                                                                </div>
                                                                            </div>

                                                                        </div>

                                                                        <a href="" class="btn btn-primary "
                                                                            role="button">Confirm</a>
                                                                    </form>
                                                                </div>


                                                                <!--progress bar -->
                                                                <hr class="invis">
                                                                <p class="lead">90% Completed</p>

                                                                <div class="progress">
                                                                    <div class="progress-bar" role="progressbar"
                                                                        style="width: 40%; background-color: rgb(18, 19, 19);">
                                                                        <span class="sr-only">Complete 40%</span>
                                                                    </div>
                                                                </div>
                                                                <!--progress bar ends-->


                                                            </div>
                                                        </div>


                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <a href="#" class="btn btn-default btn-block"><i
                                                                        class="fas fa-chevron-left"></i></a>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <a href="#" class="btn btn-default btn-block"><i
                                                                        class="fas fa-chevron-right"></i></a>
                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <% } %>

                                        <% if( gradeView=='true' ) { %>
                                            <div class='grades others' id="grades">
                                                <h1>Hello from grades.</h1>
                                            </div>
                                            <% } %>


                                                <%- include('../includes/footer.ejs') %>
                                                    <script src="/js/app.js"></script>
    </body>

    </html>